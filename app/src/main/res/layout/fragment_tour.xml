<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".UI.TourDetailsFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tour Big Title"
            android:id="@+id/textViewTourBigTitle"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignBottom="@+id/buttonCloseFragment"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/buttonCloseFragment"
            android:gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewTourBigImg"
            android:layout_below="@+id/textViewTourBigTitle"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_below="@+id/imageViewTourBigImg"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tour Description"
                    android:id="@+id/textViewTourDescription"
                    android:layout_below="@+id/textViewTourBigTitle"
                    android:layout_alignParentStart="true"
                    />
            </LinearLayout>
        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLOSE"
            android:id="@+id/buttonCloseFragment"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="#000000"
            android:textColor="#f4f4f4"/>

    </RelativeLayout>

</FrameLayout>
